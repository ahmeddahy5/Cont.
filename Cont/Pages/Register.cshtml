@page
@model Cont.Pages.RegisterModel
@{
	ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="./css/Register.css" />
<script src="/js/form.js" asp-append-version="true"></script>
<div class="main">
	<div class="contain">
		<h1>REGISTER</h1>
		<form >
			<div class="inputs">
			<input type="text" placeholder="Firstname" class="Firstname" id="Firstname"required>
				<input type="text" placeholder="Lastname" class="Lastname" id="Lastname" required />
				<input type="email" placeholder="Email" class="Email" id="Email" required />
				<input type="text" placeholder="Username" class="Username" id="Username" required />
				<input type="password" placeholder="Password" class="Password" id="Password" required />
				<input type="tel" placeholder="Phone" class="Phone" id="Phone" required />
			<input type="submit" value="Register" class="submit" id="Submit"/>
			</div>
		</form>
		<p>Already Have An Account ? <a asp-area="" asp-page="/Login">Login</a></p>
	</div>
</div>